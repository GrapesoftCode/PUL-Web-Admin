@section Scripts{
    <script>
        //$("input[name='portion']").TouchSpin();
        //$("input[name='quantity']").TouchSpin();

        $("input[name='portion']").TouchSpin({
            min: 0,
            max: 5000,
            step: 1,
            decimals: 0,
            boostat: 5,
            maxboostedstep: 10,
        });

        $("input[name='grams']").TouchSpin({
            min: 0,
            max: 5000,
            step: 0.5,
            decimals: 2,
            boostat: 5,
            maxboostedstep: 10,
            postfix: 'g'
        });

        $("input[name='price']").TouchSpin({
            min: -1000000000,
            max: 1000000000,
            step: 0.5,
            decimals: 2,
            stepinterval: 50,
            maxboostedstep: 10000000,
            prefix: '$'
        });

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgFood').attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
